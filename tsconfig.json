{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "module": "esnext",
        "moduleResolution": "node",
        "rootDirs": ["node_modules","./src", "node_modules/@types"],
        "target": "es5",
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "configFile": "tslint.json"
            }
        ],
        "allowSyntheticDefaultImports": true
    }
}