{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "configFile": "tslint.json"
            }
        ],
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ]
}